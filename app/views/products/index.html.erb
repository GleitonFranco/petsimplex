<div class="container">
  <p id="notice"><%= notice %></p>

  <h1><%= t('Products') %></h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t('Name') %></th>
        <th><%= t('Cost') %></th>
        <th><%= t('Price') %></th>
        <th><%= t('Group') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= number_to_currency(product.cost, unit: "", separator: ",") %></td>
          <td><%= number_to_currency(product.price, unit: "", separator: ",") %></td>
          <td><%= product.group.name %></td>
          <td><%= link_to t('Show'), product %></td>
          <td><%= link_to t('Edit'), edit_product_path(product) %></td>
          <td><%= link_to t('Destroy'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>
  <br>
  <%= link_to 'Menu', root_path %>
</div>
